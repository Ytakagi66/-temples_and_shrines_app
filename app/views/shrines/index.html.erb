<p id="notice"><%= notice %></p>

<h1>Shrines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Adress</th>
      <th>Nearest station</th>
      <th>Url</th>
      <th>Photo</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shrines.each do |shrine| %>
      <tr>
        <td><%= shrine.name %></td>
        <td><%= shrine.adress %></td>
        <td><%= shrine.nearest_station %></td>
        <td><%= shrine.url %></td>
        <td><%= shrine.photo %></td>
        <td><%= shrine.location %></td>
        <td><%= shrine.user_id %></td>
        <td><%= link_to 'Show', shrine %></td>
        <td><%= link_to 'Edit', edit_shrine_path(shrine) %></td>
        <td><%= link_to 'Destroy', shrine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

