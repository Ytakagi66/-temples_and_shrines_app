<div class="temple_index">
<h1>神社一覧</h1>
<div class="temple_item">
  <ul class="slider">
    <% @temples.each do|temple| %>
    <li>
      <%= image_tag "/uploads/temple/image/#{temple[:id]}/#{temple[:image]}" %>
      <div class="temple_infomation">
        <h2 class="temple_name">名称：<%= temple[:name] %></h2>
        <h3>概要</h3>
        <p><%= simple_format(temple[:article]) %></p>
        <p>御祭神：<br><%= temple[:god] %></p>
        <p>御朱印：<%= temple[:goshuin] %></p>
        <p>所在地：<%= temple[:adress] %></p>    
        <p>URL:<%= link_to(temple[:url],temple[:url]) %></p>
        <p></p>    
      </div>
    </li>
    <% end %>
  </ul>
</div>

<div class="temple_slider_ttl">  
  <h1 class="slider_ttl">寺院一覧</h1>
  <ul class="horizontal_scroll" >
    <% @temples.each do|temple| %>
    <li class="temple_thumbnail">
      <img id="mypic" onclick="slideshow()" src="<%= "/uploads/temple/image/#{temple[:id]}/#{temple[:image]}" %>">
      <%= link_to "temples/#{temple[:id]}", class:"temple_photo" do %>
        <span><%= temple[:name] %></span>
      <% end %>
    </li>
      <% end %>
  </ul>
</div>

<%= link_to '新規登録', new_temple_path %>
</div>