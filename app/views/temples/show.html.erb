<div class="temple_show">
    <div class="col-md-8">
      <%= image_tag @temple.image.url %>      
      <div class="card-body">
      <h5 class="card-name"><%= @temple[:name] %></h5>
      <p class="card-adress">所在地：<%= @temple[:adress] %></p>
      <p class="card-article"><%= simple_format(@temple[:article]) %></p>
      <p class="card-url">URL：<%= @temple[:url] %></p>
      <%= link_to '詳細', @temple, class: "btn btn-outline-primary" %>
      <%= link_to '編集', edit_temple_path(@temple), class: "btn btn-outline-primary" %>
      <%= link_to '削除', @temple, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
    </div>
  </div>
<%= link_to '編集', edit_temple_path(@temple) %> |
<%= link_to '戻る', temples_path %>
</div>